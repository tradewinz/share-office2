                <input type="text" name="rentestimate[location]" class="input-large" />
                <br>
                <button class="btn btn-warning btn-large btn-call-to-action" style="color:#000000" type="submit" id="getEstimateBtn">Get Estimate</button>

              <% end %>

            </div>

          </div>

      </div>
      
    </div>
